/var/log/nginx/*.log {
	daily
	missingok
	rotate 52
	compress
	delaycompress
	notifempty
	create 0640 root root
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi \
	endscript
	postrotate
		[ ! -f /run/nginx.pid ] || kill -1 `cat /run/nginx.pid`
                /usr/local/nginx/sbin/nginx -s reload
	endscript
}
